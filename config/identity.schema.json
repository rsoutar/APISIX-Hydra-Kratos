{
    "$id": "https://schemas.ory.sh/presets/kratos/quickstart/email-password/identity.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Person",
    "type": "object",
    "properties": {
      "traits": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "title": "E-Mail",
            "minLength": 3,
            "ory.sh/kratos": {
              "credentials": {
                "password": {
                  "identifier": true
                }
              }
            }
          },
          "phone": {
            "type": "string",
            "format": "phone",
            "title": "Phone Number",
            "minLength": 10,
            "ory.sh/kratos": {
              "credentials": {
                "code": {
                  "identifier": true
                }
              }
            }
          },
          "pid": {
            "type": "string",
            "title": "Personal ID"
          },
          "name": {
            "type": "string",
            "title": "Full Name"
          },
          "name_en": {
            "type": "string",
            "title": "Full Name in English"
          },
          "birthdate": {
            "type": "string",
            "format": "date",
            "title": "Birthdate"
          },
          "address": {
            "type": "string",
            "title": "Address"
          },
          "gender": {
            "type": "string",
            "title": "Gender"
          }
        },
        "required": ["email", "phone", "pid"],
        "additionalProperties": false
      }
    }
  }
  